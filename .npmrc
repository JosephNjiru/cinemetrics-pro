# CineMetrics Pro - Comprehensive NPM Configuration
# Dr. Joseph N. Njiru, PhD, M PredAnylt (Data Science)
# Disable all external service connections to prevent firewall blocks

# Disable package analytics and funding messages
fund=false
audit=false

# Disable Snyk security scanning
snyk=false
snyk-token=false

# Disable Sentry error reporting
sentry-disable=true

# Disable Scarf.sh telemetry
scarf=false
disable-scarf=true

# Disable OpenCollective
disable-opencollective=true
opencollective-hide=true

# Disable package telemetry
telemetry=false
disable-telemetry=true

# Disable update notifications
update-notifier=false

# Performance optimizations
progress=true
timing=false
loglevel=warn

# Security settings (keep local audit but no external calls)
audit-level=moderate
